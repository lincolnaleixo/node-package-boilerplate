indent_size=2

[*.css]
indent_style=space
indent_size=2

[{*.js,*.cjs}]
indent_style=space
indent_size=2

[{*.mjs,*.es6}]
indent_style=space
indent_size=2

[{jshint.json,*.jshintrc}]
